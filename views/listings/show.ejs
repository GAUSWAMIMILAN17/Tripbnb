<% layout("/layouts/boilerplate.ejs") %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <br>
      <h3 class="">
        <%= listing.title %>
      </h3><br>

      <div class="card col-md-12 listing-card show-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-image" style="height:400px" alt="listing_image">
      </div>


      <ul style="list-style: none; padding: 0; margin: 0;">
        <p><b>Owned by -</b>
          <%= listing.owner.username %>
        </p>
        <p class="mt-3 col-12">
          <%= listing.description %>
        </p>
        <p class="text-muted"><%= listing.category %></p>
        <p class="mt-3">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
        <p class="mt-3">
          <%= listing.country %>
        </p>
        <p class="mt-3">
          <%= listing.location %>
        </p>
      </ul>
      <br />
      <!-- <a href="/listings/<%= listing._id %>/edit">Edit this Listing</a> -->
      <!-- <br /><br /> -->

      <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
        <div class="d-flex mb-4 gap-3">
          <form method="GET" action="/listings/<%=listing._id%>/edit">
            <button class="btn btn-outline-danger">Edit</button>
          </form>
          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-outline-dark">Delete</button>
          </form>
        </div>
        <% } %>
          <% if(currUser) { %>
            <div class="col-12 offset-0">
              <hr>
              <h4> Leave a Review</h4>
              <form method="post" class="mb-3 needs-validation" novalidate action="/listings/<%=listing._id%>/reviews">
              
                <div class="mb-3 mt-3">
                  <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                  
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                </div>

                <div class="mb-3 mt-3">
                  <label for="comment" class="form-label">Comments</label>
                  <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="5"
                    required></textarea>
                  <div class="invalid-feedback">Please submit some comment for review</div>
                </div>
                <button class="btn btn-outline-dark" type="submit">Submit</button>
              </form>
              <% } %>
                <hr>
                <p><b>All Reviews</b></p>
                <div class="row p-2">
                  <% for(review of listing.reviews) { %>
                    <div class="card col-sm-5 ms-sm-3 mb-3 ">
                      <div class="card-body">
                        <h5 class="card-title ms-0">@<%= review.author.username %></h5>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        <p class="card-text"><%= review.comment %></p>
                      </div>
                      <% if(currUser && currUser._id.equals(review.author._id)) {%>
                      <form method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
                        class="mb-3 mt-3">
                        <button class="btn  btn-sm  btn-dark">Delete</button>
                      </form>
                      <% } %>
                    </div>
                    <% } %>
                </div>
            </div>
    </div>
  </div>