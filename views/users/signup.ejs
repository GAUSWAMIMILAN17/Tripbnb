<% layout("/layouts/boilerplate.ejs") %>
    <style>
        .heading {
            font-size: 2.5rem ;
            /* default for large screens */
        }

        @media (max-width: 576px) {
            .heading {
                font-size: 1.5rem !important;
                /* smaller size for small screens */
            }
        }
    </style>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1 class="heading"><b>Signup on Tripbnb</b></h1>
        </div>
        <div class="col-8 offset-2">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control" placeholder="Enter Username"
                        required />
                    <div class="invalid-feedback">Please Enter a Username</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" type="text" class="form-control" placeholder="Enter email"
                        required />
                    <div class="invalid-feedback">Please Enter a Email</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control"
                        placeholder="Enter password" required />
                    <div class="invalid-feedback">Please Enter a Password</div>
                </div>

                <button class="btn btn-danger">Signup</button>
            </form>
            <p class="mt-2 backto">Already have an account? <a href="/login"><b>Login</b></a></p>
        </div>
    </div>